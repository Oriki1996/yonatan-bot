# קובץ דוגמה למשתני סביבה
# העתק קובץ זה ל-.env והכנס את הערכים האמיתיים

# הגדרות Flask
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-this-in-production
DEBUG=True

# Google API
GOOGLE_API_KEY=your-google-api-key-here

# Database
DATABASE_URL=sqlite:///yonatan.db

# Redis (אופציונלי - לcaching ו-rate limiting)
REDIS_URL=redis://localhost:6379/0

# Sentry (אופציונלי - לerror monitoring)
SENTRY_DSN=

# Rate Limiting
RATELIMIT_STORAGE_URL=memory://

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/yonatan.log

# Session
SESSION_TIMEOUT=1800

# הגדרות צ'אט
MAX_MESSAGE_LENGTH=5000
MAX_SESSIONS_PER_IP=10
CHAT_RATE_LIMIT=30

# הגדרות מערכת fallback
FALLBACK_ENABLED=True
FALLBACK_TIMEOUT=10

# הגדרות בטיחות
ENABLE_CSRF=True
SECURE_COOKIES=False

# הגדרות פרודקשן (רק לפרודקשן)
# FLASK_ENV=production
# DEBUG=False
# SECURE_COOKIES=True
# SSL_REQUIRED=True